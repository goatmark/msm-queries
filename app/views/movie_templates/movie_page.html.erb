<% params %>

<h1>Movie #<%=@movie_id%> details</h1>

<a href="/movies">
  Go back
</a>

<hr>

<dl>
  <dt>Title</dt>
  <dd><%=@specific_movie.title%></dd>
  
  <dt>Year</dt>
  <dd><%=@specific_movie.year%></dd>

  <dt>Duration</dt>
  <dd><%=@specific_movie.duration%></dd>
  
  <dt>Description</dt>
  <dd><%=@specific_movie.description%></dd>

  <dt>Image</dt>
  <dd><img src="<%=@specific_movie.image%>" style="width:250px;"></dd>

  <dt>Director</dt>
  <%director = Director.where({:id => @specific_movie.director_id}).at(0)%>
  <dd><%=director.name%></dd>

  <dt>Created at</dt>
  <dd><%=@specific_movie.created_at%></dd>

  <dt>Updated at</dt>
  <dd><%=@specific_movie.updated_at%></dd>
</dl>

<hr>
